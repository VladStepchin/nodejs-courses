<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required>
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter course" data-success="Great job">Helper text</span>
    </div>
    <div class="input-field">
        <input id="price" type="number" name="price" class="validate" required>
        <label for="price" min="1">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field">
        <input id="img" type="text" name="image" class="validate" required>
        <label for="image">Image URL</label>
        <span class="helper-text" data-error="Enter image URL"></span>    
    </div>
    <button class="btn btn-primary">Add course</button>
</form>