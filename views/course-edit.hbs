<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" type="text" name="title" class="validate" required value="{{course.title}}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Enter course" data-success="Great job">Helper text</span>
    </div>
    <div class="input-field">
        <input id="price" type="number" name="price" class="validate" required value="{{course.price}}">
        <label for="price" min="1">Price</label>
        <span class="helper-text" data-error="Enter price"></span>
    </div>
    <div class="input-field">
        <input id="img" type="text" name="image" class="validate" required value="{{course.image}}">
        <label for="image">Image URL</label>
        <span class="helper-text" data-error="Enter image URL"></span>    
    </div>
    <input type="hidden" name="id" value="{{course.id}}">

    <button class="btn btn-primary">Edit course</button>
</form>